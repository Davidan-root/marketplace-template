generator client {
  provider = "prisma-client-js"
  
}

datasource db {
  provider = "postgresql"
  
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  password  String?  // Hashed, usa bcrypt
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deleted   Boolean  @default(false)

  products  Product[] // Vendedor tiene muchos productos
  orders    Order[]   // Comprador tiene Ã³rdenes
}

model Product {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  price       Decimal  @db.Decimal(10,2)
  stock       Int      @default(0)
  category    Category
  imageUrl    String?  // URL de Cloudinary/S3
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  deleted     Boolean  @default(false)

  sellerId    Int
  seller      User     @relation(fields: [sellerId], references: [id], onDelete: Cascade)

  orderItems  OrderItem[]

  @@unique([title, sellerId])
  @@index([category])
  @@index([sellerId])
}

model Order {
  id        Int      @id @default(autoincrement())
  total     Decimal  @db.Decimal(10,2)
  status    OrderStatus @default(PENDING)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deleted   Boolean  @default(false)

  buyerId   Int
  buyer     User     @relation(fields: [buyerId], references: [id], onDelete: Cascade)

  items     OrderItem[]

  @@index([status])
  @@index([buyerId, status])
}

model OrderItem {
  id               Int      @id @default(autoincrement())
  quantity         Int      @default(1)
  priceAtPurchase  Decimal  @db.Decimal(10,2) // snapshot del precio al comprar

  productId Int
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  orderId   Int
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@unique([orderId, productId])
  @@index([productId])
}

enum Role {
  USER
  SELLER
  ADMIN
}

enum Category {
  ELECTRONICS
  CLOTHING
  BOOKS
  HOME
  OTHER
}

enum OrderStatus {
  PENDING
  PAID
  SHIPPED
  DELIVERED
  CANCELLED
}